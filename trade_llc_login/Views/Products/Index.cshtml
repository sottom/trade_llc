
@{
    ViewBag.Title = "Index";
}

<div class="jumbotron text-center header_main row">
    <div class="col-md-12">
        <h8>Products</h8>
    </div>
</div>

<p>Select a product: 
    <div class="dropdown show">
        <a class="btn btn-primary dropdown-toggle" href="https://example.com" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Select an Option
            <span class="caret"></span>
        </a>

        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            <li>@Html.ActionLink("Nuts", "Nuts", "Products", null, new { @class = "dropdown-item" })</li>
            <li>@Html.ActionLink("Dried Fruit", "driedFruit", "Products", null, new { @class = "dropdown-item" })</li>
            <li>@Html.ActionLink("Miscellaneous", "Miscellaneous", "Products", null, new { @class = "dropdown-item" })</li>
        </div>
    </div>
</p>
