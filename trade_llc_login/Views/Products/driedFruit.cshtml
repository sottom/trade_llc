
@{
    ViewBag.Title = "driedFruit";
}

<div class="jumbotron text-center header_main row">
    <div class="col-md-12">
        <h8>Dried Fruit</h8>
    </div>
</div>

<div class="jumbotron">
    <h1 style="text-align: center;">@ViewBag.ProductName</h1>
    <img style="display:block;margin:0 auto;" src=@ViewBag.ProductImage />
    <br />
    <p style="text-align: center">
        <li>Location: @ViewBag.ProductLocation</li>
        <li>Amount of Product for Sell: @ViewBag.ProductAmount</li>
        <li>Price: @ViewBag.ProductPrice</li>
    </p>
</div>

<div>
    <h1>Comment/Questions</h1>
    <div class="form-group">
        <label for="comment">Comment:</label>
        <textarea class="form-control" rows="5" cols="500" id="comment"></textarea>
    </div>
    <p id="characterCount"></p>
    <br />
    <button type="submit" class="btn btn-default" onclick="clearContact()">Submit</button>
</div>